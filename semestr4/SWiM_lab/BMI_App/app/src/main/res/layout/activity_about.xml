<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AboutActivity">

    <TextView
            android:text="Arkadiusz Rasz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myName"
            android:layout_weight="1"
            android:textSize="24sp"/>
    <TextView
            android:text="Indeks: 242493"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myIndex"
            android:layout_weight="1"
            android:textSize="24sp"/>
    <TextView
            android:text="@string/myGithub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/githubLink"
            android:layout_weight="2"
            android:textSize="24sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Random text box because I didn't know what to put here"
            android:ems="10"
            android:gravity="start"
            android:id="@+id/randomTextBox" android:layout_weight="4" android:inputType="textMultiLine" tools:ignore="Autofill,LabelFor"/>
</LinearLayout>